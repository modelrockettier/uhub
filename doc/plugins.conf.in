#plugin ${PLUGIN_DIR}/mod_topic.so

# Log file writer
#
# Parameters:
# file: path/filename for log file.
# syslog: if true then syslog is used instead of writing to a file (Unix only)
plugin ${PLUGIN_DIR}/mod_logging.so "file=${LOG_DIR}/uhub.log"

